{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react-jsx",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "ES5", "ES6", "ES7", "ESNext"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "docs/**/*"]
}
